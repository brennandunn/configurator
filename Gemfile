source "http://rubygems.org"
gemspec

# Duplicated groups because  appraisal does not support multiple group names
# https://github.com/thoughtbot/appraisal/pull/31
group :development do
  gem 'sqlite3', '~> 1.3'
  gem 'shoulda'
  gem 'mocha'
  gem 'simplecov'
  gem 'appraisal', :require => false
end

group :test do
  gem 'sqlite3', '~> 1.3'
  gem 'shoulda'
  gem 'mocha'
  gem 'simplecov'
  gem 'appraisal', :require => false
end